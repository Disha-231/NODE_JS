<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View</title>
</head>

<body>
    <table border="1" align="center">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Password</th>
            </tr>
        </thead>
        <tbody>
            <% record.map((val,i)=>{ %>
                <tr>
                    <td>
                        <%= val.id %>
                    </td>
                    <td>
                        <%= val.name %>
                    </td>
                    <td>
                        <%= val.email %>
                    </td>
                    <td>
                        <%= val.password %>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>
    <br>
    <center> <a href="/add">Add</a></center>

</body>

</html>